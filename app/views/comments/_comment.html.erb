<div class="comment">
  <div>
    <p><%= comment.user.name %></p>
    <p><%= comment.body.html_safe %></P>
    <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %> &#xb7;
    <%= link_to 'Reply', new_help_ticket_comment_comment_path(comment_id: comment.id, help_ticket_id: comment.help_ticket_id) %>
  </div>
  <% comment.comments.each do |cmt| %>
    <%= render partial: 'comments/comment', locals:{comment: cmt} %>
  <% end %>
</div>
