<%= form_for(@employee, :html =>{ :multipart => true }) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :avatar %><br>
  <%=f.file_field :avatar %>
</div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :jobtitle %><br>
    <%= f.text_field :jobtitle %>
  </div>
  <div class="field">
    <%= f.label :skills %><br>
    <%= f.text_field :skills %>
  </div>

<div class="field">
  <%= f.label :gender %>
  <%= f.select( :gender, [['Male', 'Male'], ['Female', 'Female']], {}) %>
</div>
<div class="field">
  <%= f.label :bio %><br>
  <%= f.text_area :bio, placeholder: "Your Text here....", rows: 5, cols: 100 %>
</div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-default" %>
  </div>
<% end %>
