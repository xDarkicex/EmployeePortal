<h3>Employee Listing</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Employee Name</th>
      <th>Jobtitle</th>
      <th>Skills</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
        <tr data-href="<%= employee_url(employee) %>">
        <td><%=link_to image_tag(employee.avatar.url(:thumb), class:"indexedemployee img-thumbnail"), employee_path(employee) %></td>
        <td><%=link_to employee.name, employee_path(employee), class: "btn btn-link" %></td>
        <td><%= employee.jobtitle %></td>
        <td><%= truncate(employee.skills, length: 5) %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phone %></td>
        <td><%= link_to 'New Message', new_message_path(user_id:employee.id), class:"btn btn-default" %>
        <td><%= link_to 'Show', employee_path(employee), class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
