<p id="notice"><%= notice %></p>
<h2><strong>Employee Profile</strong></h2><% if admin? %>
<p class="adminbadge"><strong>ADMIN</strong></p>
<% end %>


<p>

  <%= image_tag @employee.avatar.url(:medium), class: "img-thumbnail" %>
</p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>
<p>
  <strong>Job Title:</strong>
  <%= @employee.jobtitle %>
</p>

<p>
  <strong>Skills:</strong>
  <%= @employee.skills %>
</p>
<p>
  <strong>Bio:</strong>
  <%= @employee.bio %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @employee.gender %>
</p>

<p>
  <strong>Sexuality:</strong>
  <%= @employee.sexuality %>
</p>

<p>
  <strong>Email:</strong>
  <%= @employee.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @employee.phone %>
</p>
<% if current_user.id == @employee.id %>
<%= link_to 'Edit', edit_employee_path(@employee), class:"btn btn-default" %> |

<% end %>
<%= link_to 'Back', employees_path, class:"btn btn-default" %>
