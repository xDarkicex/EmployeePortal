%p#notice= notice
%h1 Listing Help Tickets
%table
  %thead
    %tr
      %th User
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @help_tickets.each do |help_ticket|
      %tr
        %td= time_tag help_ticket.created_at
        %td= help_ticket.user.name
        %td= help_ticket.title
        %td= link_to 'Show', help_ticket
        %td= link_to 'Edit', edit_help_ticket_path(help_ticket)
        %td= link_to 'Destroy', help_ticket, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Help ticket', new_help_ticket_path
