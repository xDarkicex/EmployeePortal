= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label "Product Image"
    %br/
    = f.file_field :productphoto
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label "Price 8 oz"
    %br/
    = f.text_field :price8oz
  .field
    = f.label "Price 64 oz"
    %br/
    = f.text_field :price64oz
  .field
    = f.label "Price 5 Gallon"
    %br/
    = f.text_field :price5gal
  .field
    = f.label "Price 55 Gallon"
    %br/
    = f.text_field :price55gal
  .field
    = f.label :descripton
    %br/
    = f.text_field :descripton
  .field
    = f.label :dosage
    %br/
    = f.text_field :dosage
  .actions
    = f.submit class:"btn btn-default"
