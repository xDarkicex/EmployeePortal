
<%= render 'parent', post: Technicalassistance.find(post.parent_id) if post.parent_id %>

<div>
  <% if post.user %>
    <%= post.user.name %>
  <% end %>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Device:</strong>
    <%= post.device %>
  </p>

  <p>
    <strong>Descripton:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= post.created_at.strftime("%b %d %Y") %> @ <%= post.created_at.strftime("%H:%M") %>
  </p>
</div>
