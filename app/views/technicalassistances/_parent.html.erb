
<div class="posting">
  <% if post.user %>
  <%= image_tag post.user.avatar, class: "img-circle postavatar" %> By
    <%= post.user.name %> <% if post.user.admin %><span class="adminbadge"><strong class="btn btn-success">ADMIN</strong></span><% end %>

  <% end %>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Device:</strong>
    <%= post.device %>
  </p>

  <p>
    <strong>Descripton:</strong>
    <%= post.body.html_safe %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= post.created_at.strftime("%b %d %Y") %> @ <%= post.created_at.strftime("%H:%M") %>
  </p>
  <%= link_to 'Edit', edit_technicalassistance_path(post) %>
  <%= link_to "Reply", new_technicalassistance_path(parent_id:post.id) %>
  <% Technicalassistance.where(parent_id: post.id).each do |child| %>
    <%= render 'parent', post: child %>
  <% end %>
</div>
