= form_for(@todo) do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo.errors.count, "error")
        prohibited this todo from being saved:
      %ul
        - @todo.errors.full_messages.each do |message|
          %li= message
  - if params[:action] == 'edit'
    .field
      = f.label :note
      %br/
      = f.text_field :note
      = f.label :done
      = f.check_box :done
  - if params[:action] == 'new'
    .field
      = f.label :note
      %br/
      = f.text_field :note
  .actions
    = f.submit
